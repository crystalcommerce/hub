<div class="content">
  <p>
    <span><h3>List of Stores - across Crystal Commerce Intranetwork</h3></span>
  </p>
  <p>
    Search Store
    <span>
      <%= form_tag stores_path, :method => 'get' do %>
        <p>
          <%= text_field_tag :store_name, params[:search], placeholder: "Enter Store Name", class: "form-control input-large search-textfield" %>
          <br>
          <%= submit_tag "Search", class: "btn btn-success" %>
        </p>
      <% end %>
    </span>
  </p>

  <div class="stores-div">
  <%= paginate @stores %>
  <table class="table table-bordered table-hover table-striped">
    <thead>
      <tr class="active" style="background-color: grey">
        <th>
          Store
        </th>
        <th>
          Full Store name
        </th>
        <th>
          POS
        </th>
        <th>
          Admin
        </th>
      </tr>
    </thead>
    <tbody>
      <% @stores.each do |store| %>
      <tr>
        <th>
          <%= store.database_name %>
        </th>
        <th>
          <%= store.name %>
        </th>
        <th>
          <%= link_to "GO", store.url %>
        </th>
        <th>
          <%= link_to "GO", "https://#{store.database_name}-admin.crystalcommerce.com/" %>
        </th>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <%= paginate @stores %>
</div>
