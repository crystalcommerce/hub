<div class="content">
  <p>
    <span><b>List of Stores</b> - across Crystal Commerce Intranetwork</span>
  </p>
  <p>
    <span>
      Search Store
      <%= text_field_tag 'Store name', '', placeholder: "Enter Store Name", class: "search-store" %>
      <%= button_tag "Search", class: "btn btn-success" %>
    </span>
  </p>

  <div class="stores-div">
  <%= paginate @stores %>
  <table class="table table-bordered table-hover table-striped">
    <thead>
      <tr class="active" style="background-color: grey">
        <th>
          Store
        </th>
        <th>
          Full Store name
        </th>
        <th>
          POS
        </th>
        <th>
          Admin
        </th>
      </tr>
    </thead>
    <tbody>
      <% @stores.each do |store| %>
      <tr>
        <th>
          <%= store.database_name %>
        </th>
        <th>
          <%= store.name %>
        </th>
        <th>
          <%= link_to "GO", store.url %>
        </th>
        <th>
          <%= link_to "GO", "https://#{store.database_name}-admin.crystalcommerce.com/" %>
        </th>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <%= paginate @stores %>
</div>
